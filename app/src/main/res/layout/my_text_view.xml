<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivPhoto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/todo"
        android:paddingBottom="10dp"
        android:paddingEnd="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:src="@android:drawable/ic_menu_always_landscape_portrait" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_fast_name"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:text="" android:layout_marginEnd="5dp" />

        <TextView
            android:id="@+id/tv_father_name"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text=""
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/tv_darth_of_barth"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text=""
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="50dp" />
        <TextView
            android:id="@+id/tv_mobile_number"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text=""
            android:inputType="number"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="50dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_last_name"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:text="" android:layout_marginEnd="5dp"/>

        <TextView
            android:id="@+id/tv_mather_name"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text=""
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text=""
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="50dp" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text=""
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="50dp" />

    </LinearLayout>

</LinearLayout>